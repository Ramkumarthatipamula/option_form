<div class="row">
  <% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<br /><br /><div><%= link_to "New Application", new_certificate_path, :class => "btn btn-success pull-right" %></div><br />
<br /></br></br><br>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <div class="form-group row field">
      <label for="user_name" class="col-xs-2 col-form-label">Academic Programe</label>
      <div class="col-xs-6">
        <select class="custom-select form-control" id="certificate_academic_program" onchange="retrieve_courses_and_colleges_based_on_academic_program($('#certificate_academic_program').val());" placeholder="Select any Academic Programe">
          <option selected>Select any academic programe</option>
          <option>UG</option>
          <option>PG</option>
          <option>Diploma(2 Years)</option>
          <option>Diploma(3 Years)</option>
        </select>
      </div>
    </div>
    <div class="form-group row field">
      <label for="user_name" class="col-xs-2 col-form-label">Select Degree</label>
      <div class="col-xs-6">
        <select class="custom-select form-control" id="certificate_degree_name" onchange="retrieve_colleges_based_on_degree($('#certificate_degree_name').val());" placeholder="Select any Academic Programe">
          <option selected>Select any degree</option></select>
      </div>
    </div>
    <div class="form-group row field">
      <label for="user_name" class="col-xs-2 col-form-label">Select College</label>
      <div class="col-xs-6">
        <select class="custom-select form-control" id="certificate_college_name" placeholder="Select any College">
          <option selected>Select any college</option></select>
      </div>
    </div>
    <div class="form-group row field">
      <label for="user_name" class="col-xs-2 col-form-label">Select any year</label>
      <div class="col-xs-6">
        <select class="custom-select form-control" placeholder="Select any Year">
          <option selected>Select any Year</option>
          <option>2013-14</option>
          <option>2014-15</option>
          <option>2015-16</option>
          <option>2016-17</option>
        </select>
      </div>
    </div>
  </div>
</div>
<div>
  <table id="certificate_lists" class="table table-bordered table-striped">
     <thead>.
        <tr>
           <th>Certificate No</th>
           <th>Student ID</th>
           <th>Student Name</th>
           <th>Father Name</th>
           <th>Mother Name</th>
           <th>Aadher Number</th>
           <th>Academic Year</th>
           <th>Degree</th>
           <th>College</th>
           <th>Year</th>
           <th>Download Link</th>
           <th>Actions</th>
        </tr>
     </thead>
     <tbody>
        <% @certificates.each do |certificate| %>
           <tr style="vertical-align: middle; text-align: center;">
              <td style="vertical-align: middle;"><%= certificate.certificate_no %></td>
              <td style="vertical-align: middle;"><%= certificate.student_id %></td>
              <td style="vertical-align: middle;"><%= certificate.student_name %></td>
              <td style="vertical-align: middle;"><%= certificate.father_name %></td>
              <td style="vertical-align: middle;"><%= certificate.mother_name %></td>
              <td style="vertical-align: middle;"><%= certificate.aadhar_no %></td>
              <td style="vertical-align: middle;"><%= certificate.academic_program %></td>
              <td style="vertical-align: middle;"><%= certificate.degree_name %></td>
              <td style="vertical-align: middle;"><%= certificate.college_name %></td>
              <td style="vertical-align: middle;"><%= certificate.admission_year %></td>
              <td style="vertical-align: middle;"><%= link_to "Download Application", certificate.attachment_url,  target: "_blank" %></td>
              <td style="vertical-align: middle;"><%= link_to 'Edit', edit_certificate_path(certificate.id), class: "btn btn-primary" %></td>
           </tr>
        <% end %>
     </tbody>
  </table>
</div>
